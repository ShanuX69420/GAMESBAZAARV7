generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                    String           @id @default(cuid())
  name                  String
  email                 String           @unique
  image                 String?
  passwordHash          String
  role                  Role             @default(USER)
  isBlocked             Boolean          @default(false)
  blockedAt             DateTime?
  blockedReason         String?
  isActive              Boolean          @default(true)
  deactivatedAt         DateTime?
  deactivatedReason     String?
  sessionVersion        Int              @default(0)
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  actionsPerformed      AdminActionLog[] @relation("AdminActionActor")
  actionsReceived       AdminActionLog[] @relation("AdminActionTarget")
  listingModerationLogs ListingModerationLog[] @relation("ListingModerationActor")
  listings              Listing[]
  moderatedListings     Listing[]        @relation("ListingModerator")
}

enum Role {
  USER
  ADMIN
}

model AdminActionLog {
  id           String          @id @default(cuid())
  adminId      String
  targetUserId String
  action       AdminActionType
  reason       String?
  metadata     Json?
  createdAt    DateTime        @default(now())
  admin        User            @relation("AdminActionActor", fields: [adminId], references: [id], onDelete: Cascade)
  targetUser   User            @relation("AdminActionTarget", fields: [targetUserId], references: [id], onDelete: Cascade)

  @@index([targetUserId, createdAt(sort: Desc)])
  @@index([adminId, createdAt(sort: Desc)])
}

enum AdminActionType {
  BLOCK_USER
  UNBLOCK_USER
  CHANGE_DISPLAY_NAME
  REMOVE_PROFILE_PICTURE
  DEACTIVATE_USER
  REACTIVATE_USER
}

model Category {
  id           String         @id @default(cuid())
  name         String         @unique
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  gameLinks    GameCategory[]
  offerings    GameOffering[]
  listings     Listing[]
}

model Game {
  id           String         @id @default(cuid())
  name         String         @unique
  icon         String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  categoryLinks GameCategory[]
  offerings    GameOffering[]
  listings     Listing[]
}

model GameCategory {
  gameId       String
  categoryId   String
  createdAt    DateTime @default(now())
  game         Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([gameId, categoryId])
  @@index([categoryId])
}

model GameOffering {
  id           String      @id @default(cuid())
  gameId       String
  categoryId   String
  name         String
  formatType   OfferingFormatType @default(ACCOUNT)
  currencyMode CurrencyMode @default(OPEN_QUANTITY)
  currencyUnitLabel String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  game         Game        @relation(fields: [gameId], references: [id], onDelete: Cascade)
  category     Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  packageOptions OfferingPackageOption[]
  listings     Listing[]

  @@unique([gameId, categoryId])
  @@unique([gameId, name])
  @@index([categoryId])
}

enum OfferingFormatType {
  ACCOUNT
  CURRENCY
}

enum CurrencyMode {
  OPEN_QUANTITY
  FIXED_PACKAGES
}

model OfferingPackageOption {
  id         String       @id @default(cuid())
  offeringId String
  amount     Int
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  offering   GameOffering @relation(fields: [offeringId], references: [id], onDelete: Cascade)
  listings   Listing[]

  @@unique([offeringId, amount])
  @@index([offeringId, amount])
}

model Listing {
  id           String        @id @default(cuid())
  sellerId     String
  gameId       String
  categoryId   String
  offeringId   String?
  packageOptionId String?
  moderatedByAdminId String?
  moderatedAt   DateTime?
  moderationReason String?
  title        String
  description  String?
  deliveryTimeText String?
  formatData   Json?
  pricePkr     Int
  status       ListingStatus @default(ACTIVE)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  seller       User          @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  moderatedByAdmin User?     @relation("ListingModerator", fields: [moderatedByAdminId], references: [id], onDelete: SetNull)
  game         Game          @relation(fields: [gameId], references: [id], onDelete: Restrict)
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  offering     GameOffering? @relation(fields: [offeringId], references: [id], onDelete: SetNull)
  packageOption OfferingPackageOption? @relation(fields: [packageOptionId], references: [id], onDelete: Restrict)
  moderationLogs ListingModerationLog[]

  @@index([sellerId, createdAt(sort: Desc)])
  @@index([gameId, categoryId])
  @@index([offeringId])
  @@index([packageOptionId])
  @@index([moderatedByAdminId, moderatedAt(sort: Desc)])
  @@index([status, createdAt(sort: Desc)])
}

enum ListingStatus {
  DRAFT
  ACTIVE
  PAUSED
  HIDDEN_BY_ADMIN
  REMOVED_BY_ADMIN
}

model ListingModerationLog {
  id             String                     @id @default(cuid())
  listingId      String
  adminId        String
  action         ListingModerationActionType
  reason         String
  previousStatus ListingStatus
  nextStatus     ListingStatus
  createdAt      DateTime                   @default(now())
  listing        Listing                    @relation(fields: [listingId], references: [id], onDelete: Cascade)
  admin          User                       @relation("ListingModerationActor", fields: [adminId], references: [id], onDelete: Cascade)

  @@index([listingId, createdAt(sort: Desc)])
  @@index([adminId, createdAt(sort: Desc)])
}

enum ListingModerationActionType {
  HIDE_LISTING
  RESTORE_LISTING
  REMOVE_LISTING
  PAUSE_LISTING
  UNPAUSE_LISTING
}
